<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9cdd2">

    <EditText
        android:id="@+id/editText"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="#11000000"
        android:drawableLeft="@mipmap/ic_launcher_adi"
        android:ems="10"
        android:hint="EMIAL"
        android:inputType="textEmailAddress"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/editText4"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:background="#11000000"
        android:drawableLeft="@mipmap/ic_launcher_store"
        android:ems="10"
        android:hint="STORE NAME"
        android:inputType="textPersonName"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="210dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167dp"
        android:background="#11000000"
        android:drawableLeft="@mipmap/ic_launcher_loc"
        android:ems="10"
        android:hint="LOCATION"
        android:inputType="textPostalAddress"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="208dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:background="#11000000"
        android:drawableLeft="@mipmap/ic_launcher_em"
        android:ems="10"
        android:hint="MOBILE"
        android:inputType="textPhonetic"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="163dp"
        android:background="#11000000"
        android:drawableLeft="@mipmap/ic_launcher_lock"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/editText5"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="102dp"
        android:background="#11000000"
        android:drawableLeft="@mipmap/ic_launcher_store"
        android:ems="10"
        android:hint="ADDRESS"
        android:inputType="textPersonName"
        android:textSize="20dp" />


    <android.support.v7.widget.CardView
        android:id="@+id/register2"
        android:layout_width="253dp"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="REGISTER NOW" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>